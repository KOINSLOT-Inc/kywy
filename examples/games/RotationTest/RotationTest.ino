uint8_t rotatedBitmap[sizeof(spriteSheetData)];

const uint8_t *frames[] = {spriteSheetData};
Sprite slime(frames, 1, 32, 32);

class slimeRotator : public Actor::Actor
{
public:
  int angle = 0;

  void initialize()
  {
    slime.setPosition(58, 64);
    slime.setVisible(true);
    slime.setNegative(true);
  }

  void handle(::Actor::Message *message)
  {
    switch (message->signal)
    {
    case Kywy::Events::TICK:
      engine.display.clear();


      slime.rotate(spriteSheetData,rotatedBitmap,32, 32,float(angle));
      

      const uint8_t* frames2[] = {rotatedBitmap};
      slime.setSheet(frames2,1);

      slime.render();
      engine.display.update();
      angle += 1;
      if (angle >= 360)
        angle = 0;
    }
  }
} slimeRotator;

void setup()
{
  engine.start();
  slime.setDisplay(&engine.display);

  slimeRotator.subscribe(&engine.input);
  slimeRotator.subscribe(&engine.clock);
  slimeRotator.start();
}

void loop()
{
  delay(1000);
}
